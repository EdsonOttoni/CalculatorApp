<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="container_buttons">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="operators_buttons" parent="container_buttons">
        <item name="android:background">@color/color_operator_color</item>
    </style>
    
    <style name="numbers_buttons" parent="container_buttons">
        <item name="android:background">@color/color_number</item>
        <item name="android:textColor">@color/color_number_text</item>
    </style>
</resources>